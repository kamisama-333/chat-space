.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__new-group
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.top-items__icons__edit
          = link_to edit_user_path(current_user.id) do
            = icon('fas', 'cog', class: 'icon')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to "#" do
          %p.group__group-name 
            = group.name
          %p.group__group-message 
            メッセジーはまだありません
